<resources>

    <!-- Base application theme. -->
    <style firstname="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item firstname="colorPrimary">@color/primary</item>
        <item firstname="colorPrimaryDark">@color/primary_dark</item>
        <item firstname="colorAccent">@color/accent</item>
    </style>

    <style firstname="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item firstname="colorPrimary">@color/primary</item>
        <item firstname="colorPrimaryDark">@color/primary_dark</item>
        <item firstname="colorAccent">@color/accent</item>

        <item firstname="android:windowBackground">@color/primary</item>

        <item firstname="colorControlNormal">@color/iron</item>
        <item firstname="colorControlActivated">@color/white</item>
        <item firstname="colorControlHighlight">@color/white</item>
        <item firstname="android:textColorHint">@color/iron</item>

        <item firstname="colorButtonNormal">@color/primary_darker</item>
        <item firstname="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style firstname="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item firstname="colorAccent">@color/white</item>
        <item firstname="android:textColorPrimary">@color/iron</item>
        <item firstname="android:background">@color/primary</item>
    </style>

</resources>